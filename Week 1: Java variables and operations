
public class Lab1Week1 {

	public static void main(String[] args) {
		
		//create a variable to hold the quantity of available plane seats left on a flight
		
		int availablePlainSeats = 0;
		//create a variable to hold the cost of groceries at checkout
		
		double GroceriesCost = 99.99;
		//create a variable to hold a person's middle initial
		
		char MiddleInitial ='M';
		//create a variable to hold true if it's hot outside and false if it's cold outside
	    boolean IsHotOutside = false;			
		//create a variable to hold a customer's first name
	    String FirstName = "Alejandra";
		//create a variable to hold a street address
	    String StreetAddress = "123 Java Road";		
		//print all variables to the console

	    
	    System.out.println("available plane seats left on a flight: "+ availablePlainSeats);
	    System.out.println("cost of groceries at checkout: "+ GroceriesCost);
	    System.out.println("middle initial: "+ MiddleInitial);
	    System.out.println("it's hot outside: "+IsHotOutside);
	    System.out.println("customer's first name: "+ FirstName);
	    System.out.println("street address: "+ StreetAddress);
	    
	  //a customer booked 2 plane seats, remove 2 seats from the available seats variable
	    
	    availablePlainSeats = availablePlainSeats -2;
	    System.out.println("remove 2 seats from the available seats variable: "+ availablePlainSeats);
	  			
	  //impulse candy bar purchase, add 2.15 to the grocery total
	    
	    GroceriesCost = GroceriesCost + 2.15;
	    System.out.println("add 2.15 to the grocery total: "+ GroceriesCost);
	    	
  	  	
	  //birth certificate was printed incorrectly, change the middle initial to something else
	    MiddleInitial ='X';
	    System.out.println( "birth certificate change: "+ MiddleInitial);
	  		
	  //the season has changed, update the hot outside variable to be opposite of what it was
	    IsHotOutside = true;
	    System.out.println("update the hot outside variable to hot weather: " + IsHotOutside);
	  		
	  //create a new variable called full name using the customer's first name, the middle initial, and a last name of your choice
	  	String FullName = 	FirstName + " " + MiddleInitial + ".";
	  	System.out.println("full name: " + FullName );
	  		
	  //print a line to the console that introduces the customer and says they live at the address variable
	  	String CustomerLivesAt = "Hi, my name is " + FullName + ", I live at " + StreetAddress +".";	  
	  	System.out.println("customer and address: "+ CustomerLivesAt);
	    
	    
	    
	}

}


